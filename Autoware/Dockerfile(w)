FROM nvidia/cuda:11.1-cudnn8-devel-ubuntu20.04 #사용할 이미지 지정
#NVIDIA GPU 설정
ENV NVIDIA_VISIBLE_DEVICES ${NVIDIA_VISIBLE_DEVICES:-all} 
ENV NVIDIA_DRIVER_CAPABILITIES ${NVIDIA_DRIVER_CAPABILITIES:+$NVIDIA_DRIVER_CAPABILITIES,}graphics

# install package
ENV DEBIAN_FRONTEND noninteractive
RUN apt-key del 7fa2af80 #Remove the outdated signing key
RUN apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2004/x86_64/3bf863cc.pub
#Manually install the new signing key
#Install the new cuda-keyring package
#Replace $distro/$arch -> new cuda-keyring package : ubuntu2004/x86_64
RUN apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/machine-learning/repos/ubuntu2004/x86_64/7fa2af80.pub
#위 세 줄의 RUN 코드는 NVIDIA GPG 관련 오류 해결
#Updating the CUDA Linux GPG Repository Key

RUN apt-get update && apt-get install -y --no-install-recommends \
        sudo \
        apt-utils \
        git \
        software-properties-common \
        curl \
        gnupg2 \
        lsb-release \
        && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# install Git LFS
RUN curl -s https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh | bash && \
    apt-get install git-lfs && \
    git lfs install && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# install ROS2 foxy (ROS2 foxy Ubuntu(Debian) Installation - 공식문서)
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key  -o /usr/share/keyrings/ros-archive-keyring.gpg
RUN echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(lsb_release -cs) main" | tee /etc/apt/sources.list.d/ros2.list > /dev/null
#echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(source /etc/os-release && echo $UBUNTU_CODENAME) main" | sudo tee /etc/apt/sources.list.d/ros2.list > /dev/null
#위가 공식문서 -> 다음과 같은 에러
# /bin/sh: 1: source: not found
# E: Malformed entry 1 in list file /etc/apt/sources.list.d/ros2.list (Component)
# E: The list of sources could not be read.
RUN apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        ros-foxy-ros-base \
        python3-colcon-common-extensions \
        python3-pip \
        python3-vcstool \
        python3-rosdep \
        && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
RUN rosdep init
RUN rosdep update
SHELL ["/bin/bash", "-c"] 

# install Autoware Auto
RUN source /opt/ros/foxy/setup.bash && \
    git clone https://gitlab.com/autowarefoundation/autoware.auto/AutowareAuto.git -b master && \
    cd AutowareAuto && \
    git lfs pull --exclude="" --include="*" && \
    sudo apt-get update && \
    vcs import < autoware.auto.$ROS_DISTRO.repos && \
    rosdep install -y -i --from-paths src && \
    sudo mkdir /opt/AutowareAuto && \
    sudo chmod 777 /opt/AutowareAuto && \
    colcon build --install-base /opt/AutowareAuto --cmake-args -DCMAKE_BUILD_TYPE=Release && \
    sudo apt-get clean && \ #불필요한 파일 제거
    sudo rm -rf /var/lib/apt/lists/* #쓰레기통 비우기 느낌...?ㅇㅅㅇ
